<!-- Button trigger modal -->
<button type="button" class="btn btn-primary m-2" style="
  --bs-btn-padding-y: 0.25rem;
  --bs-btn-padding-x: 0.5rem;
  --bs-btn-font-size: 1rem;
" data-bs-toggle="modal" data-bs-target="#filter-bugs-modal">
  Filter Bugs
</button>
</button>

<!-- Modal -->
<div class="modal fade" id="filter-bugs-modal" tabindex="-1" aria-labelledby="filter-bugs-modal-header" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="filter-bugs-modal-header">Filter Bugs</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form action="/" method="get" id="filter-bugs-form">
        <div class="row mb-3 m-auto mt-3">
          <label for="labels" class="col-sm-4 col-form-label">Search by Label</label>
          <div class="col-sm-8">
            <% for( let label of project.labels) { %>
            <input class="form-check-input" name="labels" type="checkbox" value="<%= label %>" id="<%=label%>" />
            <label class="form-check-label" for="<%=label%>">
              <%=label%> </label><br />
            <% } %>
          </div>
        </div>
        <div class="row mb-3 m-auto">
          <label for="reportedBylabel" class="col-sm-4 col-form-label">Reported By</label>
          <div class="col-sm-8">
            <input class="form-check-input" name="reportedBy" type="radio" checked="checked" value="" id="null" />
            <label class="form-check-label" for="null">None</label><br />
            <% for( let bug of project.bugs ) { %>
            <input class="form-check-input" name="reportedBy" type="radio" value="<%= bug.reported_by %>" id="<%= bug.reported_by %>" />
            <label class="form-check-label" for="<%= bug.reported_by %>"><%= bug.reported_by %></label><br />
            <% } %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" data-bs-dismiss="modal" class="btn btn-primary" onclick="flashMessageForFilter()">
            Filter Bugs
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/filterBugs.js"></script>