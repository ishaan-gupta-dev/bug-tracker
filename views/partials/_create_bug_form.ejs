<!-- Button trigger modal -->
<button type="button" class="btn m-auto btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
  + Report Bug
</button>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create a Bug to track!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/bug/create/projectId/<%=project._id%>" method="POST">
        <div class="row mb-3 m-auto mt-3">
          <label for="titlelabel" class="col-sm-4 col-form-label text-white">Title</label>
          <div class="col-sm-8">
            <input type="text" name="title" placeholder="Bug title" required class="form-control" id="titlelabel" />
          </div>
        </div>
        <div class="row mb-3 m-auto">
          <label for="descriptionlabel" class="col-sm-4 col-form-label text-white">Description</label>
          <div class="col-sm-8">
            <textarea name="description" placeholder="Bug Description" required class="form-control" id="descriptionlabel" style="height: 100px"></textarea>
          </div>
        </div>
        <div class="row mb-3 m-auto">
          <label for="reportedBylabel" class="col-sm-4 col-form-label text-white">Reported By</label>
          <div class="col-sm-8">
            <input type="text" name="reportedBy" placeholder="Who is reporting?" required class="form-control" id="reportedBylabel" />
          </div>
        </div>
        <div class="row mb-3 m-auto">
          <label for="dueDatelabel" class="col-sm-4 col-form-label text-white">Due Date</label>
          <div class="col-sm-8">
            <input type="date" name="dueDate" placeholder="Till when should this bug be closed?" required class="form-control" id="dueDatelabel" />
          </div>
        </div>
        <div class="row mb-3 m-auto">
          <label for="statuslabel" class="col-sm-4 col-form-label text-white">Status</label>
          <div class="col-sm-8">
            <select class="form-select" aria-label="Default select example" id="statuslabel" name="status">
              <option value="Open">Open</option>
              <option value="In Progress">In Progress</option>
              <option value="Closed">Closed</option>
            </select>
          </div>
        </div>
        <div class="row mb-3 m-auto">
          <label for="severitylabel" class="col-sm-4 col-form-label text-white">Severity</label>
          <div class="col-sm-8">
            <select class="form-select" aria-label="Default select example" id="severitylabel" name="severity">
              <option value="High">High</option>
              <option value="Medium">Medium</option>
              <option value="Low">Low</option>
            </select>
          </div>
        </div>
        <div class="row mb-3 m-auto">
          <label for="labels" class="col-sm-4 col-form-label text-white">Add Labels</label>
          <div class="col-sm-8">
            <input name="labels" class="form-check-input" type="checkbox" value="UI Improvement" id="ui-improvement" />
            <label class="form-check-label text-white" for="ui-improvement">
              UI Improvement </label>
            <br />
            <input name="labels" class="form-check-input" type="checkbox" value="Documentation" id="documentation" />
            <label class="form-check-label text-white" for="documentation">
              Documentation </label>
            <br />
            <input name="labels" class="form-check-input" type="checkbox" value="Enhancement" id="enhancement" />
            <label class="form-check-label text-white" for="enhancement">
              Enhancement </label>
            <br />
            <input name="labels" class="form-check-input" type="checkbox" value="Duplicate" id="duplicate" />
            <label class="form-check-label text-white" for="duplicate"> Duplicate </label>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Create Bug</button>
        </div>
      </form>
    </div>
  </div>
</div>